<Page x:Class="_1AarsProjekt.View.ProductCreatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_1AarsProjekt.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="750"
      Title="ProductManagementWindow"
      Background="White">

    <Grid>
        <Grid Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="266"/>
                <ColumnDefinition Width="266"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <StackPanel HorizontalAlignment="Left" Height="auto" VerticalAlignment="Top" Width="150" Grid.Column="0" Grid.Row="1">
                <Label HorizontalAlignment="left" Margin="0, 5" Content="Firma CVR-NR: "/>
                <Label HorizontalAlignment="left" Margin="0, 5" Content="Udveksling NR: "/>
                <Label HorizontalAlignment="left" Margin="0, 5" Content="Produkt Navn: "/>
                <Label HorizontalAlignment="left" Margin="0, 5" Content="Produkt Navn: "/>
                <Label HorizontalAlignment="left" Margin="0, 5" Content="Varenummer: "/>
                <Label HorizontalAlignment="left" Margin="0, 5" Content="Produkt Beskrivelse: "/>
                <Label HorizontalAlignment="left" Margin="0, 5" Content="Synonym: "/>
                <Label HorizontalAlignment="left" Margin="0, 5" Content="Produkt Gruppe: "/>
                <Label HorizontalAlignment="left" Margin="0, 5" Content="Vægt: "/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Height="auto" VerticalAlignment="Top" Width="150" Grid.Column="1" Grid.Row="1">
                <Label HorizontalAlignment="left" Margin="0, 5" Content="Antal: "/>
                <Label HorizontalAlignment="left" Margin="0, 5" Content="Pris: "/>
                <Label HorizontalAlignment="left" Margin="0, 5" Content="Rabat: "/>
                <Label HorizontalAlignment="left" Margin="0, 5" Content="Netto Pris: "/>
                <Label HorizontalAlignment="left" Margin="0, 5" Content="P-kode: "/>
                <Label HorizontalAlignment="left" Margin="0, 5" Content="Dist Kode: "/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Right" Margin="5, 5, 5, 5" Height="auto" VerticalAlignment="Top"  Width="150" Grid.Column="0" Grid.Row="1">

                <TextBox x:Name="txtCompanyId" Text="{Binding Product.CompanyID}" Width="80" Height="20" Margin="0, 10" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <TextBox x:Name="txtInterchangeId" Text="{Binding Product.InterchangeID}" Width="80" Height="20" Margin="0, 5" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <TextBox x:Name="txtProductName1" Text="{Binding Product.ProductName1}" Width="80" Height="20" Margin="0, 10" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <TextBox x:Name="txtProductName2" Text="{Binding Product.ProductName2}" Width="80" Height="20" Margin="0, 10" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <TextBox x:Name="txtItemUnit" Text="{Binding Product.ItemUnit}" Width="80" Height="20" Margin="0, 5" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <TextBox x:Name="txtProductDescription" Text="{Binding Product.ProductDescription}" Width="80" Height="20" Margin="0, 10" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <TextBox x:Name="txtSynonyms" Text="{Binding Product.Synonyms}" Width="80" Height="20" Margin="0, 5" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <TextBox x:Name="txtProductGroup" Text="{Binding Product.ProductGroup}" Width="80" Height="20" Margin="0, 10" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <TextBox x:Name="txtWeight" Text="{Binding Product.Weight}" Width="80" Height="20" Margin="0, 10" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Right" Margin="5, 5, 5, 5" Height="auto" VerticalAlignment="Top" Width="150" Grid.Column="1" Grid.Row="1">

                <TextBox x:Name="txtMinQuantity" Text="{Binding Product.MinQuantity}" Width="80" Height="20" Margin="0, 5" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <TextBox x:Name="txtPrice" Text="{Binding Product.Price}" Width="80" Height="20" Margin="0, 10" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <TextBox x:Name="txtDiscount" Text="{Binding Product.Discount}" Width="80" Height="20" Margin="0, 5" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <TextBox x:Name="txtNetPrice" Text="{Binding Product.NetPrice}" Width="80" Height="20" Margin="0, 10" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <TextBox x:Name="txtPCode" Text="{Binding Product.PCode}" Width="80" Height="20" Margin="0, 5" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <TextBox x:Name="txtDistCode" Text="{Binding Product.DistCode}" Width="80" Height="20" Margin="0, 10" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </StackPanel>

            <Label Content="Opret Produkt" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

            <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right">
                <Button Name="btnCreateCustomer" Command="{Binding CreateProduct}" Content="Opret" Height="20" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
